<h1>Cadastrar uma conta</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'pt-3') do |f| %>
  <div class="form-group row">
    <%= f.text_field :name, autofocus: true, autocomplete: "nome", class: 'form-control form-control-lg', placeholder: 'Nome completo' %>
  </div>
  <div class="form-group row">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg', placeholder: 'E-mail' %>
  </div>
  <div class="form-group row">
    <%= f.password_field :password, class: "form-control form-control-lg", id: "exampleInputPassword1", placeholder: "Digite sua senha" %>
  </div>
  <div class="form-group row">
    <%= f.password_field :password_confirmation, class: "form-control form-control-lg", id: "exampleInputPassword1", placeholder: "Confirme a senha" %>
  </div>
  <div class="mt-3 row">
    <%= f.submit "Cadastrar", class: 'btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn' %>
  </div>
  <div class="text-center mt-4 font-weight-light"> Já é cadastrado? <%= link_to 'Fazer Login', new_user_session_path, class: 'text-primary' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>