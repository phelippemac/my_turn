var dateBase = $('input[type=hidden]').val();
$('#cadModal').modal('hide'); 
$.ajax({
  type: 'GET',
  url: "<%= home_system_path %>",
  data: {new_day: dateBase},
}).done(function() {
  $('#calendar').html("<%= j render partial: 'partials/table' %>");
});


